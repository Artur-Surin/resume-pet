{{!-- Це код container файлу для summary сторінки,в якому міститься код,
котрий буде віддаватися по шляху(PATH) - "/summary"--}}

<div>
    {{#with main}}
    <main>
        <section> {{>title big=true data='Work history'}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>
                        <br>
                        <div> {{duration.from}}-
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (Досі працюю)
                            {{/if}}
                        </div>
                        <br>
                        <div> {{#if company.url}}
                            <div>
                                <a>{{>link text=company.name href=company.url blank=true noLine=true}}</a>
                            </div>
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}
                        </div>
                        <br>
                        <br>
                        <div>
                            <strong>Projects ({{projectAmount}})</strong>
                        </div>
                        <br>
                        <ul>
                            {{#each projects}}
                            <li>
                                <div>
                                    <a>{{>link text=name href=url blank=true noLine=true}}</a>
                                </div>
                                <br>
                                <div>{{about}}</div>
                                <br>
                                <div>
                                    <em>Project stacks ({{stackAmoGnt}})</em>
                                </div>
                                <br>
                                {{#each stacks }}
                            <li>
                                <div>{{name}}</div>
                            </li>
                            {{/each}}
                            <br>
                            <div>
                                <em>Project awards({{awardAmoGnt}})</em>
                            </div>
                            <br>
                            {{#each awards}}
                            <li>
                                <div>
                                    {{name}}
                                </div>
                            </li>
                            {{/each}}
                    </li>
                    {{/each}}
                </ul>
                </li>
                {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>
{{!--Цей код містить лише те, що буде виводитись в
{{{body}}} в layout / default.hbs Адже наш layout
/default.hbs має вже структуру HTML --}}